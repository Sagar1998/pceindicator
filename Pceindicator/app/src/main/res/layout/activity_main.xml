<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akanksha.pceindicator.MainActivity"

    android:id="@+id/DrawerLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/but1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/maps"
            android:layout_alignParentStart="true"
            android:text="TimeTable"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/result"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:text="Maps(TODO)"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/termcal"
            android:layout_alignParentStart="true"
            android:text="Results"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/termcal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/contactus"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:text="TermCalendar"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/contactus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/commitee"
            android:layout_alignParentStart="true"
            android:text="Contact Us"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/commitee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Student Commitee"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/but1"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/logopce" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu_test"
        android:layout_gravity="start"

        >


    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>
